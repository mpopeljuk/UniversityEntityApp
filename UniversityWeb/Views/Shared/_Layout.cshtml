<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University Demo</title>
    @Styles.Render("~/Content/Site.css")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    <h2>@ViewBag.Title</h2>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <span>@Html.ActionLink("Home", "Index", "Home")</span>
            <span>@Html.ActionLink("Groups", "Index", "Groups")</span>
            <span>@Html.ActionLink("Students", "Index", "Students")</span>
            <span>@Html.ActionLink("Subjects", "Index", "Subjects")</span>

            @if (Request.IsAuthenticated && User.Identity.IsAuthenticated)
            {
                <span style="margin-left: 20px;">Hello, <a href='/Account/Authed'>@User.Identity.Name</a>! </span>
                <span>@Html.ActionLink("Log-out", "Logout", "Account")</span>
            }
            else
            {
                <span>@Html.ActionLink("Log-in", "Login", "Account")</span>
                <span>@Html.ActionLink("Register", "Register", "Account")</span>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - University Demo</p>
        </footer>
    </div>
</body>
</html>

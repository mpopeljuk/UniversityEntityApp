@model IEnumerable<DBModels.DTO.GroupDTO>
@{
    Layout = null;
}

<form id="add-student-form">

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        <div class="form-group">
            <label for="FirstName" class="control-label col-md-2">First Name</label>
            <div class="col-md-10">
                <input type="text" id="FirstName" name="FirstName" />
            </div>
        </div>

        <div class="form-group">
            <label for="LastName" class="control-label col-md-2">Last Name</label>
            <div class="col-md-10">
                <input type="text" id="LastName" name="LastName" />
            </div>
        </div>

        <div class="form-group">
            <label for="Age" class="control-label col-md-2">Age</label>
            <div class="col-md-10">
                <input type="number" id="Age" name="Age" />
            </div>
        </div>

        <div class="form-group">
            <label for="GroupId">Group:</label>
            <div class="col-md-10">
                <select id="GroupId" name="GroupId">
                    @foreach (var group in Model)
                    {
                        <option value="@group.Id">@group.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" id="create-student" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>
    
@Scripts.Render("~/Scripts/students-add.js")